---
import PageMeta from "src/components/PageMeta.astro";
import PageLayout from "src/layouts/PageLayout.astro";
---

<PageLayout>
   <PageMeta title={"404 Page Not Found"} slot="meta" />
   <Fragment slot="main">
      <div class="flex flex-col h-full justify-center items-center">
         <h1 class="text-[200px]">404</h1>
         <h3 class="text-5xl">Page Not Found</h3>
         <a class="mt-4 text-2xl" href="/">Return home</a>
      </div>
   </Fragment>
</PageLayout>
<style>
   ::-webkit-scrollbar {
      width: 12px;
   }

   ::-webkit-scrollbar-track {
      background-color: #fff;
   }

   ::-webkit-scrollbar-thumb {
      background-color: #2c6dee;
   }
   html :has(.dark)::-webkit-scrollbar {
      width: 12px;
   }

   html :has(.dark)::-webkit-scrollbar-track {
      background-color: #0e141b;
   }

   html :has(.dark)::-webkit-scrollbar-thumb {
      background-color: #2c6cee;
   }
</style>
