<svg
   id="scroll-to-top"
   xmlns="http://www.w3.org/2000/svg"
   class="icon icon-tabler icon-tabler-circle-chevron-up text-[#2F71F0] dark:text-[#4BCFF8] first-hidden"
   width="60"
   height="60"
   viewBox="0 0 24 24"
   stroke-width="1"
   stroke="currentColor"
   fill="none"
   stroke-linecap="round"
   stroke-linejoin="round"
>
   <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
   <path d="M9 13l3 -3l3 3"></path>
   <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"></path>
</svg>

<style>
   svg {
      position: fixed;
      bottom: 20px;
      right: 20px;
      width: 60px;
      cursor: pointer;
   }
   .first-hidden{
    display: none;
   }
   .effect-btn-in {
      animation: animationBtnIn 1s normal;
   }
   .effect-btn-out {
    animation: animationBtnOut 1s normal;
   }
   @keyframes animationBtnIn {
      from {
         opacity: 0;
         display: none;
      }
      to {
         opacity: 1;
         display: block;
      }
   }
   @keyframes animationBtnOut {
      from {
         opacity: 1;
         display: block;
      }
      to {
         opacity: 0;
         display: none;
      }
   }
</style>

<script>
   document.addEventListener("DOMContentLoaded", function () {
      var scrollToTopButton = document.getElementById("scroll-to-top");

      // Función para mostrar u ocultar el botón según la posición del scroll
      function toggleScrollToTopButton() {
         if (!scrollToTopButton) return;
         if (window.scrollY > 500) {
            // scrollToTopButton.style.display = "block";
            scrollToTopButton.classList.remove('first-hidden');
            scrollToTopButton.classList.add('effect-btn-in');
            scrollToTopButton.classList.remove('effect-btn-out');
         } else {
            // scrollToTopButton.style.display = "none";
            // scrollToTopButton.classList.add('effect-btn-out');
            // scrollToTopButton.classList.remove('effect-btn-in');
            
         }
      }
      if (scrollToTopButton) {
         scrollToTopButton.addEventListener("click", () => {
            window.scrollTo(0, 0);
         });
      }

      // Agregar un evento de desplazamiento para llamar a la función
      window.addEventListener("scroll", toggleScrollToTopButton);

      // Llamada inicial para manejar el estado inicial
      toggleScrollToTopButton();
   });

   const scrollBtn = document.getElementById("scroll-to-top");

   scrollBtn?.addEventListener("click", () => {
      window.scrollTo(0, 0);
   });
</script>
