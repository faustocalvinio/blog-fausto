function updateMadridTime() {
  const horaElement = document.getElementById("hora-span");
  if (horaElement) {
    const horaMadrid = DateTime.now().setZone('Europe/Madrid').toFormat('HH:mm');
    horaElement.innerHTML = horaMadrid;
  }
}

window.addEventListener("load", () => {
  updateMadridTime();
  setInterval(updateMadridTime, 60000); // Actualizar cada minuto
});

